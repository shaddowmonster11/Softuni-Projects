@model WorldUniversity.ViewModels.Instructors.GetInstructorsDetailsViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="col-xl-6 col-lg-12 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="p-5">
                <div class="text-center">
                    <h2>Edit Instructor</h2>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HireDate" class="control-label"></label>
                            <input type="date" asp-for="HireDate" class="form-control" />
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OfficeAssignment.Location" class="control-label"></label>
                            <input asp-for="OfficeAssignment.Location" class="form-control" />
                            <span asp-validation-for="OfficeAssignment.Location" class="text-danger" />
                        </div>
                        <div class="form-group text-left">
                            @foreach (var course in Model.CourseAssignments)
                            {
                                <div>
                                    @if (Model.SelectedCoursesId.Contains(course.Id))
                                    {
                                        <input type="checkbox" checked="" value="@course.Id" name="SelectedCoursesId" />
                                        <label>@course.Title</label>
                                    }
                                    else
                                    {
                                        <input type="checkbox" value="@course.Id" name="SelectedCoursesId" />
                                        <label>@course.Title</label>
                                    }
                                </div>
                            }
                        </div>
                        <div class="form-group row">
                            <input type="submit" value="Save" class="btn btn-success btn-block" />
                        </div>
                        <hr />
                        <div class="form-group row">
                            <a class="btn btn-primary btn-block" style="width:auto"
                               asp-action="Index">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}