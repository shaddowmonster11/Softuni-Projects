@model WorldUniversity.ViewModels.Departments.DepartmentViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-body">
            <h2>Are you sure you want to delete this department?</h2>
            <hr />
            <div class="dl-horizontal">
                <div class="form-group">
                    <label asp-for="Name" class="font-weight-bold"></label>
                    <br />
                    <span class="control-label">@Model.Name</span>
                </div>
                <div class="form-group">
                    <label asp-for="Budget" class="font-weight-bold"></label>
                    <br />
                    <span class="control-label">@Model.Budget</span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="font-weight-bold"></label>
                    <br />
                    <span class="control-label">@Model.ShortStartDateFormat</span>
                </div>
                <div class="form-group">
                    <label asp-for="Administrator" class="font-weight-bold"></label>
                    <br />
                    <span class="control-label">@Model.Administrator.FullName</span>
                </div>
            </div>
            <div class="form-group">
                <form asp-action="Delete" class="row">
                    <input type="hidden" asp-for="DepartmentId" />
                    <input type="submit" value="Delete Department" class="btn btn-danger" />
                </form>
                <br />
                <div class="row">
                    <a class="btn btn-primary" style="width:auto"
                       asp-action="Index">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
