@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "/Views/Shared/_BasicLayout.cshtml";
}
<body class="bg-dark">
    <main role="main" class="pb-3">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-12 col-md-9">
                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-5">
                            <div class-p5>
                                <div class="text-center">
                                    <h1 class="h3 text-gray-900 mb-4 font-italic">@ViewData["Title"]!</h1>
                                </div>
                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input asp-for="Input.Code" type="hidden" />
                                    <div class="form-group">
                                        <input placeholder="Enter Your Email" asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input placeholder="Password" asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input placeholder="Confirm Password" asp-for="Input.ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Reset
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
