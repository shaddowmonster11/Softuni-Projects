@model int
@{
    Layout = null;
}

<div class="container d-flex justify-content-center">
    <button class="btn btn-success btn-block" data-toggle="modal" data-target="#my-modal-@Model">Join</button>
    <div id="my-modal-@Model" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content border-0">
                <div class="modal-body p-0">
                    <div class="card border-0 p-sm-3 p-2 justify-content-center">
                        <div class="card-header pb-0 border-0 ">
                            <div class="row">
                                <div class="col ml-auto">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span> </button>
                                </div>
                            </div>
                            <p class="font-weight-bold mb-2"> Are you sure you want to join this course ?</p>
                            <p class="text-muted ">  If you are sure click Join!</p>
                        </div>
                        <div class="card-body px-sm-1 mb-2 pt-1 pb-0">
                            <div class="row justify-content-end no-gutters">
                                <div class="col-auto mx-2">
                                    <button type="button" class="btn btn-danger btn-block" data-dismiss="modal">Cancel</button>
                                </div>
                                <div class="col-auto mx-2">
                                    <form asp-controller="ExamSessions" asp-action="Index" asp-route-courseId="@Model" method="post">
                                        <input type="submit" value="Join" class="btn btn-success btn-block" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>