@model WorldUniversity.Web.ViewModels.Students.StudentViewModel

@{
    ViewData["Title"] = "Delete";
}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-body">
            <h2>Are you sure you want to delete this student?</h2>
            <hr />
            <div class="dl-horizontal">
                <div class="form-group">
                    <label asp-for="FirstName" class="font-weight-bold"></label>
                    <br />
                    <span class="control-label">@Model.FirstName</span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="font-weight-bold"></label>
                    <br />
                    <span class="control-label">@Model.LastName</span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="font-weight-bold"></label>
                    <br />
                    <span class="control-label">@Model.Email</span>
                </div>
            </div>
            <div class="form-group">
                <form asp-action="Delete" class="row">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete Student" class="btn btn-danger" />
                </form>
                <br />
                <div class="row">
                    <a class="btn btn-primary" style="width:auto"
                       asp-action="Index">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
